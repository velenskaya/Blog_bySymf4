{% extends 'PublicBlog/base.html.twig' %}

{% block title %} {{ article.title }} {% endblock %}

{% block container %}
    <div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">Company
                        <strong>blog</strong>
                    </h2>
                    <hr>
                </div>
                <div class="col-lg-12 text-center">
                    <img class="img-responsive img-border img-full" src="{{ articleImgPath ~ article.postImage }}" alt="">
                    <h2>{{ article.title }}
                        <br>
                        <small>{{ article.createdAt|localizeddate('full', 'none', 'ru_RU')}}</small>
                    </h2>
                    <p>{{ article.content }}</p>
                    <hr>
                </div>

            </div>
        </div>

    </div>
    <!-- /.container -->
{% endblock %}